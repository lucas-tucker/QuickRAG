{
    "manifest_version": 3,
    "name": "Candice",
    "version": "2.11.1",
    "description": "We need to talk about your crazy long PDFs.",
    "action": {
      "default_logo": {
        "19": "img/alt_logo.png"
      },
      "default_popup": "popup.html"
    },
    "icons": { 
      "350": "img/alt_logo.png"
    },
    "background":{
      "service_worker": "background.js",
      "type": "module"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "Command+Shift+F",
          "chromeos": "Ctrl+Shift+F",
          "linux": "Ctrl+Shift+F"
        },
        "description": "Activate the extension"
      }
    },
    "permissions": [
    "activeTab", 
    "storage", 
    "contextMenus",
    "scripting"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "http://localhost:8000/"
    ]
  }